<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <RootNamespace>Lingua</RootNamespace>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Fractions" Version="7.7.0" />
      <PackageReference Include="System.Text.Json" Version="8.0.3" />
      <PackageReference Include="UnicodeInformation" Version="2.7.1" />
    </ItemGroup>
    
    <ItemGroup>
      <None Remove="LanguageModels\**\*.json" />
      <EmbeddedResource Include="LanguageModels\**\*.json" />
    </ItemGroup>

    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>$(AssemblyName).Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>
    
</Project>
